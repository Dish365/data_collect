#:import dp kivy.metrics.dp
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDCard     kivymd.uix.card.MDCard
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDTextField    kivymd.uix.textfield.MDTextField
#:import MDLabel        kivymd.uix.label.MDLabel
#:import MDSpinner kivymd.uix.spinner.MDSpinner

<SignUpScreen>:
    name: "signup"
    # full-screen primary color background
    md_bg_color: app.theme_cls.primary_color

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDCard:
            elevation: 0
            radius: [dp(16)]
            # left, top, right, bottom padding
            padding: [dp(16), dp(8), dp(16), dp(24)]
            size_hint: None, None
            size: dp(400), dp(600)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)

                MDBoxLayout:
                    orientation:"horizontal"
                    size_hint_y: None
                    height:dp(24)

                    MDIconButton:
                        icon:"arrow-left"
                        user_font_size: "24sp"
                        disabled: root.is_registering
                        on_release: root.on_login()

                # Title
                MDLabel:
                    text: "Create Account"
                    font_style: "H5"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                # Username
                MDTextField:
                    id: username
                    hint_text: "Username"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)
                    disabled: root.is_registering

                # First & Last name side by side
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(12)
                    size_hint_y: None
                    height: dp(48)

                    MDTextField:
                        id: first_name
                        hint_text: "First Name"
                        mode: "rectangle"
                        disabled: root.is_registering

                    MDTextField:
                        id: last_name
                        hint_text: "Last Name"
                        mode: "rectangle"
                        disabled: root.is_registering

                # Email
                MDTextField:
                    id: email
                    hint_text: "Email Address"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)
                    disabled: root.is_registering

                # Password
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)
                    disabled: root.is_registering

                # Confirm Password
                MDTextField:
                    id: confirm_password
                    hint_text: "Confirm Password"
                    password: True
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)
                    disabled: root.is_registering

                # Sign-Up button
                MDRaisedButton:
                    id: signup_button
                    text: "Sign Up"
                    size_hint: 1, None
                    height: dp(50)
                    disabled: root.is_registering
                    on_release: root.signup()

                # Spinner container
                MDBoxLayout:
                    id: spinner_container
                    orientation: "horizontal"
                    adaptive_height: True
                    size_hint_y: None
                    height: dp(40) if root.is_registering else 0
                    opacity: 1 if root.is_registering else 0
                    spacing: dp(10)

                    MDSpinner:
                        id: signup_spinner
                        size_hint: None, None
                        size: dp(20), dp(20)
                        active: root.is_registering

                    MDLabel:
                        text: "Creating account..."
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_size: dp(14)

                # Link back to Login
                MDLabel:
                    markup: True
                    text: "[color=888888]Already have an account? [/color][ref=login][color=377DFF]Login[/color][/ref]"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    on_ref_press: root.on_login()
