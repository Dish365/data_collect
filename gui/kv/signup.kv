#:import dp kivy.metrics.dp
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDCard     kivymd.uix.card.MDCard
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDTextField    kivymd.uix.textfield.MDTextField
#:import MDLabel        kivymd.uix.label.MDLabel

<SignUpScreen>:
    name: "signup"
    # full-screen primary color background
    md_bg_color: app.theme_cls.primary_color

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDCard:
            elevation: 0
            radius: [dp(16)]
            # left, top, right, bottom padding
            padding: [dp(16), dp(8), dp(16), dp(24)]
            size_hint: None, None
            size: dp(400), dp(550)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)

                MDBoxLayout:
                    orientation:"horizontal"
                    size_hint_y: None
                    height:dp(24)

                    MDIconButton:
                        icon:"arrow-left"
                        user_font_size: "24sp"
                        on_release: root.on_login()

                # Title
                MDLabel:
                    text: "Create Account"
                    font_style: "H5"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                # First & Last name side by side
                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(12)
                    size_hint_y: None
                    height: dp(48)

                    MDTextField:
                        id: first_name
                        hint_text: "First Name"
                        mode: "rectangle"

                    MDTextField:
                        id: last_name
                        hint_text: "Last Name"
                        mode: "rectangle"

                # Email
                MDTextField:
                    id: email
                    hint_text: "Email Address"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)

                # Password
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)

                # Confirm Password
                MDTextField:
                    id: confirm_password
                    hint_text: "Confirm Password"
                    password: True
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(48)

                # Sign-Up button
                MDRaisedButton:
                    text: "Sign Up"
                    size_hint: 1, None
                    height: dp(50)
                    on_release: root.signup()

                # Link back to Login
                MDLabel:
                    markup: True
                    text: "[color=888888]Already have an account? [/color][ref=login][color=377DFF]Login[/color][/ref]"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    on_ref_press: root.on_login()
