#:import dp kivy.metrics.dp

<ActivityItem>:
    ripple_behavior: True
    size_hint_y: None
    height: dp(80)
    radius: [dp(8)]
    style: "outlined"
    elevation: 1
    padding: dp(16), dp(12)
    md_bg_color: app.theme_cls.surfaceColor

    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(16)
        size_hint: 1, 1

        # Icon section
        MDIconButton:
            icon: root.icon
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primaryColor
            icon_size: "24dp"
            size_hint_x: None
            width: dp(40)
            pos_hint: {"center_y": 0.5}

        # Content section
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(4)
            size_hint_x: 1
            pos_hint: {"center_y": 0.5}

            # Activity title - updated to KivyMD 2.0.1
            MDLabel:
                text: root.title
                font_style: "Body"
                role: "medium"
                bold: True
                adaptive_height: True
                size_hint_y: None
                height: self.texture_size[1]
                theme_text_color: "Primary"
                text_size: self.width, None
                
            # Activity description - updated to KivyMD 2.0.1
            MDLabel:
                text: root.description
                font_style: "Label"
                role: "small"
                adaptive_height: True
                size_hint_y: None
                height: self.texture_size[1] if self.text else 0
                theme_text_color: "Secondary"
                text_size: self.width, None
                opacity: 1 if self.text else 0

        # Time section
        MDLabel:
            text: root.time
            font_style: "Label"
            role: "small"
            size_hint_x: None
            width: dp(80)
            theme_text_color: "Hint"
            pos_hint: {"center_y": 0.5}
            halign: "right" 