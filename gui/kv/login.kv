#:import dp kivy.metrics.dp
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDCard kivymd.uix.card.MDCard
#:import MDButton kivymd.uix.button.MDButton
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDTextFieldHintText kivymd.uix.textfield.MDTextFieldHintText
#:import MDTextFieldTrailingIcon kivymd.uix.textfield.MDTextFieldTrailingIcon
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDCircularProgressIndicator kivymd.uix.progressindicator.MDCircularProgressIndicator
#:import MDIconButton kivymd.uix.button.MDIconButton
#:import AnchorLayout kivy.uix.anchorlayout.AnchorLayout

<LoginScreen>:
    name: "login"
    md_bg_color: app.theme_cls.primaryColor

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"

        MDCard:
            elevation: 0
            radius: [dp(16)]
            padding: [dp(16), dp(24), dp(16), dp(24)]
            size_hint: 0.9, None
            max_width: dp(500)
            height: self.minimum_height
            orientation: "vertical"
            size: dp(400), dp(420)

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(20)

                MDLabel:
                    text: "Research Data Collector"
                    font_style: "Display"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextField:
                    id: username
                    mode: "outlined"
                    size_hint_y: None
                    height: dp(56)
                    disabled: root.is_authenticating

                    MDTextFieldHintText:
                        text: "Username"

                MDTextField:
                    id: password
                    password: not root.password_visible
                    mode: "outlined"
                    size_hint_y: None
                    height: dp(56)
                    disabled: root.is_authenticating

                    MDTextFieldHintText:
                        text: "Password"

                    MDIconButton:
                        icon: "eye-off" if root.password_visible else "eye"
                        on_release: root.toggle_password_visibility()
                        theme_icon_color: "Custom"
                        icon_color: 0.5, 0.5, 0.5, 1
                        pos_hint: {"center_y": 0.5}
                        pos: self.parent.width - self.width - dp(8), 0

                MDLabel:
                    markup: True
                    text: "[ref=forgot][color=377DFF]Forgot Password?[/color][/ref]"
                    halign: "right"
                    size_hint_y: None
                    font_size: dp(12)
                    height: self.texture_size[1]
                    on_ref_press: root.on_forgot_password()

                MDButton:
                    id: login_button
                    style: "filled"
                    size_hint_x: 1
                    size_hint_y: None
                    height: dp(50)
                    disabled: root.is_authenticating
                    on_release: root.login()
                    
                    MDButtonText:
                        text: "Login"

                # Spinner container
                MDBoxLayout:
                    id: spinner_container
                    orientation: "horizontal"
                    adaptive_height: True
                    size_hint_y: None
                    height: dp(40) if root.is_authenticating else 0
                    opacity: 1 if root.is_authenticating else 0
                    spacing: dp(10)

                    MDCircularProgressIndicator:
                        id: auth_spinner
                        size_hint: None, None
                        size: dp(20), dp(20)
                        active: root.is_authenticating

                    MDLabel:
                        text: "Authenticating..."
                        size_hint_y: None
                        height: self.texture_size[1]
                        font_size: dp(14)

                MDLabel:
                    markup: True
                    text: "[color=888888]Don't have an account? [/color][ref=signup][color=377DFF]Sign Up[/color][/ref]"
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    on_ref_press: root.on_signup()