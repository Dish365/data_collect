<ProjectsScreen>:
    name: "projects"

    MDBoxLayout:
        orientation: "vertical"

        TopBar:
            id: top_bar

        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(16)
            size_hint_y: None
            height: dp(56)
            spacing: dp(10)

            MDLabel:
                text: "Projects"
                font_style: "H5"
                size_hint_x: 0.5
                valign: "middle"

            MDTextField:
                id: search_field
                hint_text: "Search by name..."
                size_hint_x: 0.5
                on_text: root.search_projects(self.text)

            MDRaisedButton:
                text: "New Project"
                on_release: root.open_project_dialog()
                md_bg_color: app.theme_cls.primary_color
                text_color: 1, 1, 1, 1

        MDScrollView:
            MDGridLayout:
                id: projects_grid
                cols: 1
                spacing: dp(10)
                padding: dp(16)
                adaptive_height: True
