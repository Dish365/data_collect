<SyncScreen>:
    name: "sync"

    MDBoxLayout:
        orientation: 'vertical'

        # Top Bar
        TopBar:
            id: top_bar

        # Main content area
        ScrollView:
            id: main_scroll_view
            MDBoxLayout:
                id: content_layout
                orientation: 'vertical'
                padding: dp(16)
                spacing: dp(16)
                adaptive_height: True

                # Header
                MDLabel:
                    text: "Pending Sync Items"
                    font_style: "Headline"

                    role: "medium"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)
                    halign: "left"

                # Sync All Button
                MDButton:
                    id: sync_all_button
                    style: "elevated"
                    size_hint_x: 1
                    on_release: root.sync_all_items()
                    md_bg_color: app.theme_cls.primaryColor
                    
                    MDButtonText:
                        text: "Sync All Pending Items"

                # Status Info
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(40)
                    spacing: dp(16)

                    MDLabel:
                        id: total_items_label
                        text: "Total Items: 0"
                        size_hint_x: 0.5

                    MDLabel:
                        id: sync_status_label
                        text: "Status: Ready"
                        size_hint_x: 0.5

                # Progress Bar
                MDLinearProgressIndicator:
                    id: sync_progress
                    value: 0
                    size_hint_y: None
                    height: dp(8)

                # Divider
                MDSeparator:
                    height: dp(1)

                # Pending Items List
                MDLabel:
                    text: "Pending Items"
                    font_style: "Title"

                    role: "large"
                    halign: "left"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)

                MDBoxLayout:
                    id: pending_items_layout
                    orientation: "vertical"
                    spacing: dp(8)
                    adaptive_height: True

        # Loading spinner
        MDCircularProgressIndicator:
            id: spinner
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: False 