<ForgotPasswordPopup>:
    title: ""
    separator_height: 0
    size_hint: None, None
    size: 350, 280
    auto_dismiss: True
    background: ''
    background_color: 1, 1, 1, 1  # White background

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [20, 10, 20, 20]  # Reduced top padding

        # Title text inside the layout
        Label:
            text: "Forgot Password"
            font_size: '20sp'
            bold: True
            color: 0.1, 0.1, 0.1, 1
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.size

        # Instruction label
        Label:
            id: info_label
            text: "Enter your username or email:"
            font_size: '16sp'
            color: 0.2, 0.2, 0.2, 1
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.size

        # Input field
        TextInput:
            id: user_input
            hint_text: "Username or Email"
            multiline: False
            size_hint_y: None
            height: '42dp'
            padding: [10, 10]
            background_normal: ''
            background_active: ''
            background_color: .95, .95, .95, 1
            foreground_color: 0, 0, 0, 1
            cursor_color: 0.0, 0.58, 1.0, 1
            font_size: '16sp'

        # Submit button
        Button:
            text: "Submit"
            size_hint_y: None
            height: '42dp'
            background_normal: ''
            background_color: 0.0, 0.58, 1.0, 1  # Primary blue
            color: 1, 1, 1, 1
            font_size: '16sp'
            bold: True
            on_release: root.on_submit()
