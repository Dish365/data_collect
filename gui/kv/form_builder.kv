# form_builder.kv

<FormBuilderScreen>:
    name: "form_builder"

    MDBoxLayout:
        orientation: "vertical"

        TopBar:
            id: top_bar

        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(16)
            spacing: dp(10)
            size_hint_y: None
            height: dp(56)

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(8)
                size_hint_x: 0.4
                pos_hint: {"center_y": 0.5}

                MDIconButton:
                    icon: "arrow-left"
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "dashboard"
                    theme_icon_color: "Custom"
                    icon_color: 0, 0, 0, 1
                    pos_hint: {"center_y": 0.5}

                MDLabel:
                    text: "Form Builder"
                    font_style: "H5"
                    pos_hint: {"center_y": 0.5}
                    size_hint_x: None
                    width: dp(220)

        # Main Content Area
        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(10)

            # Sidebar ScrollView
            ScrollView:
                size_hint_x: 0.3
                do_scroll_x: False

                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(16)
                    spacing: dp(12)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        text: "Question Types"
                        font_style: "H6"
                        halign: "left"
                        theme_text_color: "Primary"

                    MDRaisedButton:
                        text: "Short Text"
                        on_release: root.add_text_field()

                    MDRaisedButton:
                        text: "Long Text"
                        on_release: root.add_long_text_field()

                    MDRaisedButton:
                        text: "Number"
                        on_release: root.add_number_field()

                    MDRaisedButton:
                        text: "Multiple Choice"
                        on_release: root.add_multiple_choice_field()

                    MDRaisedButton:
                        text: "Date"
                        on_release: root.add_date_field()

                    MDRaisedButton:
                        text: "Location"
                        on_release: root.add_location_field()

                    MDRaisedButton:
                        text: "Photo"
                        on_release: root.add_photo_field()

                    MDRaisedButton:
                        text: "Rating Scale"
                        on_release: root.add_rating_scale_field()

            # Form Builder ScrollView
            ScrollView:
                size_hint_x: 0.7
                do_scroll_x: False

                MDBoxLayout:
                    orientation: "vertical"
                    padding: dp(20)
                    spacing: dp(12)
                    size_hint_y: None
                    height: self.minimum_height

                    MDLabel:
                        text: "New Survey Form"
                        font_style: "H6"
                        halign: "left"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: dp(28)

                    MDBoxLayout:
                        id: field_container
                        orientation: "vertical"
                        spacing: dp(10)
                        size_hint_y: None
                        height: self.minimum_height

                    MDLabel:
                        text: "Drag question types here to add"
                        halign: "center"
                        theme_text_color: "Hint"
                        size_hint_y: None
                        height: dp(24)
