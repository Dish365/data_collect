<AnalyticsStatCard>:
    size_hint_x: 1
    size_hint_y: None
    height: dp(120)
    radius: [12, 12, 12, 12]
    elevation: 2
    padding: dp(16)
    md_bg_color: (0.98, 0.98, 0.98, 1)

    MDBoxLayout:
        orientation: "horizontal"
        spacing: dp(16)
        size_hint: 1, 1
        pos_hint: {"center_y": 0.5}

        MDIconButton:
            icon: root.icon
            theme_icon_color: "Custom"
            icon_color: app.theme_cls.primary_color
            user_font_size: "28sp"
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {"center_y": 0.5}
            disabled: True

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(4)
            size_hint_y: 1

            MDLabel:
                text: root.value
                font_style: "H6"
                bold: True
                halign: "left"
                theme_text_color: "Primary"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: root.title
                font_style: "Body1"
                halign: "left"
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: root.note
                font_style: "Caption"
                halign: "left"
                theme_text_color: "Hint"
                size_hint_y: None
                height: self.texture_size[1] if self.text else 0
                opacity: 1 if self.text else 0 