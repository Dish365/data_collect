<AnalyticsScreen>:
    name: 'analytics'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 0

        # Top Bar
        TopBar:
            id: top_bar
            size_hint_y: None
            height: dp(64)

        # Main content area
        MDScrollView:
            id: main_scroll_view
            size_hint_y: 1
            bar_width: dp(8)
            
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(16)
                padding: dp(16)

                # Header Section
                MDCard:
                    size_hint_y: None
                    height: dp(80)
                    elevation: 1
                    padding: dp(16)

                    MDBoxLayout:
                        orientation: 'horizontal'
                        spacing: dp(16)
                        size_hint_y: None
                        height: dp(48)

                        MDLabel:
                            text: "Project:"
                            size_hint_x: None
                            width: dp(80)
                            theme_text_color: "Primary"
                            font_style: "Subtitle1"
                            halign: "left"
                            valign: "center"

                        MDRaisedButton:
                            id: project_selector
                            text: "Select Project for Analysis"
                            size_hint_x: 1
                            height: dp(48)
                            on_release: root.open_project_menu()

                        MDIconButton:
                            icon: "refresh"
                            size_hint_x: None
                            width: dp(48)
                            height: dp(48)
                            on_release: root.refresh_analysis()

                # Quick Stats Section
                MDCard:
                    size_hint_y: None
                    height: dp(140)
                    elevation: 1
                    padding: dp(16)

                    MDGridLayout:
                        id: stats_container
                        cols: 4
                        spacing: dp(16)
                        size_hint: 1, 1

                # Loading Spinner
                MDSpinner:
                    id: loading_spinner
                    size_hint: None, None
                    size: dp(48), dp(48)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: root.is_loading

                # Analytics Tabs
                MDTabs:
                    id: analytics_tabs
                    size_hint_y: None
                    height: dp(600)
                    tab_bar_height: dp(56)
                    
                    # Auto-Detection Tab
                    AutoDetectionTab:
                        title: "Auto-Detection"
                        
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(16)
                            padding: dp(16)
                            
                            # Configuration Panel
                            MDCard:
                                size_hint_x: 0.35
                                elevation: 1
                                padding: dp(16)
                                
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    
                                    MDLabel:
                                        text: "Smart Analysis"
                                        font_style: "H6"
                                        theme_text_color: "Primary"
                                        size_hint_y: None
                                        height: dp(32)
                                        
                                    MDLabel:
                                        text: "AI-powered analysis recommendations based on your data characteristics"
                                        font_style: "Body2"
                                        theme_text_color: "Secondary"
                                        text_size: self.width, None
                                        
                                    MDRaisedButton:
                                        text: "Analyze Data"
                                        size_hint_y: None
                                        height: dp(48)
                                        on_release: root.load_auto_detection()
                            
                            # Results Panel
                            MDScrollView:
                                size_hint_x: 0.65
                                
                                MDBoxLayout:
                                    id: auto_detection_content
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    padding: dp(16)
                                    size_hint_y: None
                                    height: self.minimum_height
                                    
                    # Descriptive Tab
                    DescriptiveTab:
                        title: "Descriptive"
                        
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(16)
                            padding: dp(16)
                            
                            # Configuration Panel
                            MDCard:
                                size_hint_x: 0.35
                                elevation: 1
                                padding: dp(16)
                                
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    
                                    MDLabel:
                                        text: "Analysis Configuration"
                                        font_style: "H6"
                                        theme_text_color: "Primary"
                                        size_hint_y: None
                                        height: dp(32)
                                        
                                    MDTextField:
                                        id: descriptive_variables
                                        hint_text: "Select Variables to Analyze"
                                        mode: "rectangle"
                                        size_hint_y: None
                                        height: dp(48)
                                        
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        spacing: dp(12)
                                        size_hint_y: None
                                        height: self.minimum_height
                                        
                                        MDRaisedButton:
                                            text: "Basic Statistics"
                                            size_hint_y: None
                                            height: dp(48)
                                            on_release: root.load_descriptive()
                                            
                                        MDRaisedButton:
                                            text: "Distributions"
                                            size_hint_y: None
                                            height: dp(48)
                                            
                                        MDRaisedButton:
                                            text: "Correlations"
                                            size_hint_y: None
                                            height: dp(48)
                            
                            # Results Panel
                            MDScrollView:
                                size_hint_x: 0.65
                                
                                MDBoxLayout:
                                    id: descriptive_content
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    padding: dp(16)
                                    size_hint_y: None
                                    height: self.minimum_height
                                    
                                    MDCard:
                                        size_hint_y: None
                                        height: dp(200)
                                        elevation: 1
                                        padding: dp(16)
                                        
                                        MDLabel:
                                            text: "Select analysis options to view descriptive statistics"
                                            halign: "center"
                                            theme_text_color: "Secondary"
                                            font_style: "Body1"
                        
                    # Inferential Tab
                    InferentialTab:
                        title: "Inferential"
                        
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(16)
                            padding: dp(16)
                            
                            # Configuration Panel
                            MDCard:
                                size_hint_x: 0.35
                                elevation: 1
                                padding: dp(16)
                                
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    
                                    MDLabel:
                                        text: "Statistical Tests"
                                        font_style: "H6"
                                        theme_text_color: "Primary"
                                        size_hint_y: None
                                        height: dp(32)
                                        
                                    MDTextField:
                                        hint_text: "Target Variable"
                                        mode: "rectangle"
                                        size_hint_y: None
                                        height: dp(48)
                                        
                                    MDTextField:
                                        hint_text: "Grouping Variable"
                                        mode: "rectangle"
                                        size_hint_y: None
                                        height: dp(48)
                                        
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        spacing: dp(12)
                                        size_hint_y: None
                                        height: self.minimum_height
                                        
                                        MDRaisedButton:
                                            text: "T-Tests"
                                            size_hint_y: None
                                            height: dp(48)
                                            on_release: root.load_inferential()
                                            
                                        MDRaisedButton:
                                            text: "ANOVA"
                                            size_hint_y: None
                                            height: dp(48)
                                            
                                        MDRaisedButton:
                                            text: "Regression"
                                            size_hint_y: None
                                            height: dp(48)
                            
                            # Results Panel
                            MDScrollView:
                                size_hint_x: 0.65
                                
                                MDBoxLayout:
                                    id: inferential_content
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    padding: dp(16)
                                    size_hint_y: None
                                    height: self.minimum_height
                                    
                                    MDCard:
                                        size_hint_y: None
                                        height: dp(200)
                                        elevation: 1
                                        padding: dp(16)
                                        
                                        MDLabel:
                                            text: "Configure variables and select test type to run inferential statistics"
                                            halign: "center"
                                            theme_text_color: "Secondary"
                                            font_style: "Body1"
                        
                    # Qualitative Tab
                    QualitativeTab:
                        title: "Qualitative"
                        
                        MDBoxLayout:
                            orientation: 'horizontal'
                            spacing: dp(16)
                            padding: dp(16)
                            
                            # Configuration Panel
                            MDCard:
                                size_hint_x: 0.35
                                elevation: 1
                                padding: dp(16)
                                
                                MDBoxLayout:
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    
                                    MDLabel:
                                        text: "Text Analysis"
                                        font_style: "H6"
                                        theme_text_color: "Primary"
                                        size_hint_y: None
                                        height: dp(32)
                                        
                                    MDTextField:
                                        hint_text: "Text Fields to Analyze"
                                        mode: "rectangle"
                                        size_hint_y: None
                                        height: dp(48)
                                        
                                    MDBoxLayout:
                                        orientation: 'horizontal'
                                        spacing: dp(12)
                                        size_hint_y: None
                                        height: dp(48)
                                        
                                        MDLabel:
                                            text: "Themes:"
                                            size_hint_x: None
                                            width: dp(80)
                                            theme_text_color: "Primary"
                                            
                                        MDSlider:
                                            id: theme_count_slider
                                            min: 2
                                            max: 10
                                            value: 5
                                            step: 1
                                            size_hint_x: 1
                                            
                                    MDBoxLayout:
                                        orientation: 'vertical'
                                        spacing: dp(12)
                                        size_hint_y: None
                                        height: self.minimum_height
                                        
                                        MDRaisedButton:
                                            text: "Sentiment Analysis"
                                            size_hint_y: None
                                            height: dp(48)
                                            on_release: root.load_qualitative()
                                            
                                        MDRaisedButton:
                                            text: "Theme Analysis"
                                            size_hint_y: None
                                            height: dp(48)
                                            
                                        MDRaisedButton:
                                            text: "Content Analysis"
                                            size_hint_y: None
                                            height: dp(48)
                            
                            # Results Panel
                            MDScrollView:
                                size_hint_x: 0.65
                                
                                MDBoxLayout:
                                    id: qualitative_content
                                    orientation: 'vertical'
                                    spacing: dp(16)
                                    padding: dp(16)
                                    size_hint_y: None
                                    height: self.minimum_height
                                    
                                    MDCard:
                                        size_hint_y: None
                                        height: dp(200)
                                        elevation: 1
                                        padding: dp(16)
                                        
                                        MDLabel:
                                            text: "Configure text fields and select analysis type to analyze qualitative data"
                                            halign: "center"
                                            theme_text_color: "Secondary"
                                            font_style: "Body1"

                # Bottom Action Bar
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(16)
                    size_hint_y: None
                    height: dp(56)
                    padding: dp(16)
                    
                    MDRaisedButton:
                        text: "Export Results"
                        size_hint_x: 1
                        height: dp(48)
                        on_release: root.export_results()
                        disabled: not root.analysis_results
                        
                    MDRaisedButton:
                        text: "Analysis Config"
                        size_hint_x: 1
                        height: dp(48)
                        on_release: root.show_analysis_config()
                        
                    MDIconButton:
                        icon: "help-circle"
                        size_hint_x: None
                        width: dp(48)
                        theme_icon_color: "Primary"
                