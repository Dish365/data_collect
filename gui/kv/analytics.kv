    height: dp(120)

# Menu Item Components
<MenuItem@MDListItem>:
    size_hint_y: None
    height: dp(56)
    
    MDListItemHeadlineText:
        text: ""
        font_size: "16sp"

<TwoLineMenuItem>:
    size_hint_y: None
    height: dp(72)
    
    MDListItemHeadlineText:
        text: root.headline
        font_size: "16sp"
    
    MDListItemSupportingText:
        text: root.supporting
        font_size: "14sp"

# Dialog Components
<AnalysisDialog@MDDialog>:
    size_hint: 0.85, 0.8
    elevation: 6

<ScrollDialog@MDScrollView>:
    size_hint: 1, 1
    bar_width: dp(8)

# Color Scheme
<ColorScheme>:
    primary_color: 0.2, 0.6, 1.0, 1
    secondary_color: 0.2, 0.8, 0.6, 1
    accent_color: 1.0, 0.6, 0.2, 1
    error_color: 0.8, 0.2, 0.2, 1
    success_color: 0.2, 0.8, 0.2, 1
    warning_color: 0.8, 0.6, 0.2, 1

